---
import { Image } from 'astro:assets';

const { person } = Astro.props;
const { name, description, imgSrc, website } = person;
---

<div class="col-lg-3 col-md-4 col-6 p-2">
  <div class="card h-100">
    <h2 class="h4 py-3 px-1 text-center">{name}</h2>
    <div class="ratio ratio-1x1 bg-grey">
      <Image class="card-img rounded-0 object-fit-scale" src={imgSrc} alt={name} />
    </div>
    <div class="card-body">
      <p class="card-text">{description}</p>
      {
        website && (
          <a href={website} target="_blank" class="btn btn-outline-primary btn-sm">
            {website.includes('linkedin.com') ? 'LinkedIn' : 'Website'}
          </a>
        )
      }
    </div>
  </div>
</div>
