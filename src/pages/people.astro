---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Layout from '../layouts/Layout.astro';
---

<!doctype html>
<Layout>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main class="container">
      <h1 class="text-center">Current Team</h1>
      <div class="col-lg-3 col-md-4 col-sm-6 p-2">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="h4 text-center">Name</h2>
          </div>
          <div class="ratio ratio-1x1">
            <img class="card-img object-fit-cover rounded-0" src="/charlene.png" />
          </div>
          <div class="card-body">
            <p class="card-text">Description</p>
            <a href="#" class="btn btn-outline-primary btn-sm">Website</a>
          </div>
        </div>
      </div>
      <h2 class="h1 text-center">Alumni</h2>
    </main>
    <Footer />
  </body>
</Layout>
