---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';

import PeopleContent from '../components/react/PeopleContent';
import client from '../../tina/__generated__/client';
const currentResponse = await client.queries.people({ relativePath: 'current.json' });
const alumiResponse = await client.queries.people({ relativePath: 'alumni.json' });
---

<!doctype html>
<Layout title="People">
  <body>
    <main class="container">
      <h1 class="text-center">Current Team</h1>
      <div class="row">
        <PeopleContent client:tina {...currentResponse} />
        <h2 class="h1 text-center mt-4">Alumni</h2>
        <div class="row">
          <PeopleContent client:tina {...alumiResponse} />
        </div>
      </div>
    </main>
    <Footer />
  </body>
</Layout>
